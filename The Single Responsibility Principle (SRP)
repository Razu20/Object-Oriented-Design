//This class will maintain Single Responsibility Principle(SRP)

// Class representing a cricket player
class CricketPlayer {
    private String name;
    private int age;
    private String team;

    // Constructor
    public CricketPlayer(String name, int age, String team) {
        this.name = name;
        this.age = age;
        this.team = team;
    }

    // Getters and setters
    public String getName() {
        return name;
    }

    public void setName(String name) {
        this.name = name;
    }

    public int getAge() {
        return age;
    }

    public void setAge(int age) {
        this.age = age;
    }

    public String getTeam() {
        return team;
    }

    public void setTeam(String team) {
        this.team = team;
    }
}

// Class responsible for displaying player information
class PlayerInfoDisplayer {
    public void displayPlayerInfo(CricketPlayer player) {
        System.out.println("Name: " + player.getName());
        System.out.println("Age: " + player.getAge());
        System.out.println("Team: " + player.getTeam());
    }
}
